#!/usr/bin/env bash
set -e
if [[ ! -d "/home/seththecatframe/Code/py_bf_historical" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/seththecatframe/Code/py_bf_historical")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/seththecatframe/Code/py_bf_historical" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/seththecatframe/Code/py_bf_historical/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/seththecatframe/Code/py_bf_historical/.envrc" "/home/seththecatframe/Code/py_bf_historical/.direnv"/*.rc
